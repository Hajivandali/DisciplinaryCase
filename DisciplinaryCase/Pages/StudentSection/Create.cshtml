@page
@model DisciplinaryCase.Pages.StudentSection.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ثبت دانش آموز جدید</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label">نام</label>
                <input asp-for="Student.FirstName" class="form-control" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label">نام خانوادگی</label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MeliCode" class="control-label">کد ملی</label>
                <input asp-for="Student.MeliCode" class="form-control" />
                <span asp-validation-for="Student.MeliCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.ClassroomId" class="control-label">کلاس</label>
                <select asp-for="Student.ClassroomId" class ="form-control" asp-items="ViewBag.ClassroomId"></select>
            </div>
            <div class="form-group"><br />
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="Index">برگشت به صفحه</a>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
