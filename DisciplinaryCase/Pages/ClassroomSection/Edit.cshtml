@page
@model DisciplinaryCase.Pages.ClassroomSection.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Classroom.Id" />
            <div class="form-group">
                <label asp-for="Classroom.Name" class="control-label">نام کلاس</label>
                <input asp-for="Classroom.Name" class="form-control" />
                <span asp-validation-for="Classroom.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">برگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
