@page
@model DisciplinaryCase.Pages.DisciplineCategorySection.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>دسته بندی موارد انظباطی</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisciplineCategory.Name" class="control-label">نام مورد انظباطی</label>
                <input asp-for="DisciplineCategory.Name" class="form-control" />
                <span asp-validation-for="DisciplineCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <input type="submit" value="ساختن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">برگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
