@page
@model DisciplinaryCase.Pages.DisciplineSection.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Discipline</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Discipline.StudentId" class="control-label">دانش آموز</label>
                <select asp-for="Discipline.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discipline.DisciplineCategoryId" class="control-label">نوع مورد انطباطی</label>
                <select asp-for="Discipline.DisciplineCategoryId" class ="form-control" asp-items="ViewBag.DisciplineCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discipline.Description" class="control-label">توضیح مورد انظباطی</label>
                <input asp-for="Discipline.Description" class="form-control" />
                <span asp-validation-for="Discipline.Description" class="text-danger"></span>
            </div>
            <div class="form-group"><br />
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div><br />
    <a asp-page="Index">برگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
