@page
@model DisciplinaryCase.Pages.DisciplineSection.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Discipline.Id" />
            <div class="form-group">
                <label asp-for="Discipline.StudentId" class="control-label">دانش آموز</label>
                <select asp-for="Discipline.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Discipline.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discipline.DisciplineCategoryId" class="control-label">نوع مورد انظباطی</label>
                <select asp-for="Discipline.DisciplineCategoryId" class="form-control" asp-items="ViewBag.DisciplineCategoryId"></select>
                <span asp-validation-for="Discipline.DisciplineCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discipline.Description" class="control-label">توضیحات</label>
                <input asp-for="Discipline.Description" class="form-control" />
                <span asp-validation-for="Discipline.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">برگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
